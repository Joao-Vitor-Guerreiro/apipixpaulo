generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Offer {
  id          String   @id @default(uuid())
  name        String
  description String?
  useTax      Boolean
  createdAt   DateTime @default(now())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  sales       Sale[]
}

model Client {
  id          String   @id @default(uuid())
  name        String
  description String?
  token       String   @unique
  useTax      Boolean
  sales       Sale[]
  offers      Offer[]
  createdAt   DateTime @default(now())
}

model Sale {
  id           String   @id @default(uuid())
  ghostId      String   @unique
  approved     Boolean
  productName  String
  customerName String
  visible      Boolean?
  amount       Float
  toClient     Boolean
  createdAt    DateTime @default(now())
  clientId     String
  client       Client   @relation(fields: [clientId], references: [id])
  offerId      String?
  offer        Offer?   @relation(fields: [offerId], references: [id])
}
